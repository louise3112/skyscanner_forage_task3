<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8B2196F3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <net.skyscanner.backpack.card.BpkCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cornerStyle="large"
            app:elevationLevel="focused">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <net.skyscanner.backpack.text.BpkText
                    style="@style/bpkTextHeading1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flight Information" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <net.skyscanner.backpack.text.BpkText
                    style="@style/bpkTextHeading3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flight Number: EZY1234" />

            </LinearLayout>

        </net.skyscanner.backpack.card.BpkCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <net.skyscanner.backpack.card.BpkCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cornerStyle="large"
            app:elevationLevel="focused">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <net.skyscanner.backpack.text.BpkText
                    style="@style/bpkTextHeading1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Departure" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <net.skyscanner.backpack.text.BpkText
                    style="@style/bpkTextHeading3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EDI   10:30" />

            </LinearLayout>

        </net.skyscanner.backpack.card.BpkCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <net.skyscanner.backpack.card.BpkCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cornerStyle="large"
            app:elevationLevel="focused">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <net.skyscanner.backpack.text.BpkText
                    style="@style/bpkTextHeading1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Arrival" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <net.skyscanner.backpack.text.BpkText
                    style="@style/bpkTextHeading3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DUB   11:50" />

            </LinearLayout>

        </net.skyscanner.backpack.card.BpkCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>